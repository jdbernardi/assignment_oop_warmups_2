class TicTacToe

	play
	check_game_over?
	check_victory?
	check_draw?
	switch_players

end


class Player

	name
	piece
	name=( assigned_value )
	piece=( assigned_value )

	get_coordinates
	ask_for_coordinates
	validate_coordinates_format( input )

end

class Board

	board_arr

	render
	add_piece( input, input2 )
	piece_location_valid?( input )
	within_valid_coordinates?( input )
	coordinates_available?( input )
  winning_combination?( input )
  winning_diagonal?( input )
  winning_vertical?( input )
  winning_horizontal?( input )
  diagonals
  verticals
  horizontals
  full?

end
